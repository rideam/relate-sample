  <h5 class="card-title dropdown-toggle">
  <a class="text-decoration-none link-secondary"
  data-bs-toggle="collapse" href="#{{ id }}" aria-expanded="false" aria-controls="{{ id }}">
  {{ title }}
  </a>
  </h5>
</div>
