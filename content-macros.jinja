{% macro flow(title, path) -%}
<a href="flow:{{ path }}">
  {{ title }}
</a>
{%- endmacro %}


{% macro page(title, path) -%}
<a href="staticpage:{{ path }}">
  {{ title }}
</a>
{%- endmacro %}

{% macro pdf(title, path) -%}
<a href="repocur:pdfs/{{ path }}">
  {{ title }}
  <i class="bi bi-file-earmark-pdf text-danger"></i>
</a>
{%- endmacro %}


{% macro heading(icon, text) -%}
<span><i class="bi {{ icon }} me-2"></i> {{ text }}</span>
{%- endmacro %}


